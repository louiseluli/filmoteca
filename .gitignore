venv/
env/
ENV/
.venv
.conda/
*.egg-info/

# Distribution / packaging
build/
dist/
wheels/
*.egg

# Testing
.pytest_cache/
.coverage
htmlcov/
.tox/

# Jupyter Notebook checkpoints
.ipynb_checkpoints/
*.ipynb_checkpoints

# Python logs
*.log
pip-log.txt

# MyPy type checking
.mypy_cache/
.dmypy.json

